    <script type="text/javascript">
        $(document).ready(function () {
            var str = '';
            if ('@TempData["Message"]' != '') {
                str = replaceSpecialHtml('@TempData["Message"]');
                str = str.replace('Wrong User Name or Password Kindly Contact :', $("#hdn_Wrong_User_Name_or_Password_Kindly_Contact").val());
                str = str.replace('User Is Not Active, Please Contact', $("#hdn_User_Is_Not_Active_Please_Contact").val());
                str = str.replace('Username is invalid or in-active.', $("#hdn_Username_is_invalid_or_in_active").val());
                str = str.replace('Your account information have been sent to you on', $("#hdn_Your_account_information_have_been_sent_to_you_on").val());
                str = str.replace('Your email address is invalid, please contact our Administrator.', $("#hdn_Your_email_address_is_invalid_please_contact_our_Administrator").val());
                str = str.replace('User registration failed.', $("#hdn_User_registration_failed").val());
                str = str.replace('User name is already exists.', $("#hdn_User_name_is_already_exists").val());
                //toastr.error(str);
                $.alert({
                    title: '',
                    content:str,
                });
            }
            else if (location.href.indexOf("Msg=") > -1) {
                str = location.href.substring(location.href.indexOf("Msg=") + 4);
                str = str.replace(/%20/g, ' ');

                $.alert({
                    title: '',
                    content: str,
                });
            }
            //OpenEventModel();
        });
        function replaceSpecialHtml(str) {
            str = str.replace(/&lt;/g, '<');
            str = str.replace(/&quot;/g, '"');
            str = str.replace(/&amp;/g, '&');
            str = str.replace(/&gt;/g, '>')
            return str;
        }
        function LanguageChange(langCode) {
            $('.nav-item').find('a').removeClass('active');
            $('.nav-item').find('a[id="' + langCode + '"]').addClass('active');
            $.ajax({
                url: "/Login/ChangeLanguage",
                async: false,
                type: "POST",
                data: { LangCode: langCode },
                success: function (data, textStatus, jqXHR) {
                    window.location.reload();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    window.location.reload();
                }
            });
        }
        function OpenEventModel() {
            $('.loading-overlay-image-container').show();
            $('.loading-overlay').show();
            $.ajax({
                url: "@Url.Action("OpenEventModel","Login")",
                type: "POST",
                data: null,
                success: function (data, textStatus, jqXHR) {
                    //MoveToErrorPage(data.Status);
                    if (data.Status != undefined) {
                        if (data.Status == "1") {
                            if (data.Data != null && data.Data.length > 0) {
                                var tot = data.Data.length, i = 0, html = '';
                                var apiUrl = '@System.Configuration.ConfigurationManager.AppSettings["APIURL"]';
                                apiUrl = apiUrl.replace(/api/g, 'InfoImages/');
                                for (; i < tot; i++) {
                                    html = '<div id="imagemodel" class="modal-dialog modal-lg modalPopupnew" style="max-width:' + data.Data[i].NaturalWidth+'px">'+
                                                '<div class="modal-content">'+
                                                    '<div class="modal-header">'+
                                                        '<button type="button" class="close" data-dismiss="modal" style="margin-bottom: -42px;margin-top: -26px;">×</button>'+
                                                    '</div>'+
                                                    '<center>'+
                                                        '<div class="modal-body" id="img_div">'+
                                                            '<img style="max-width: 100%;" id="imgEvent" src="">'+
                                                        '</div>'+
                                                    '</center>'+
                                                '</div>'+
                                    '</div>';

                                    $('#loginModal').append(html);
                                    $('#imgEvent').attr('src', (apiUrl + data.Data[i].FileName));
                                    $("#loginModal").modal('show');
                                }
                            }
                        }
                        $('.loading-overlay-image-container').hide();
                        $('.loading-overlay').hide();
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    //MoveToErrorPage(0);
                    $('.loading-overlay-image-container').hide();
                    $('.loading-overlay').hide();
                }
            });
        }
        function Login_Click() {
            if ($(".login-data").hasClass("display_none")) {
                $(".login-data").removeClass("display_none");
                $(".login-data").addClass("display_block");
            }
            else {
                $(".login-data").removeClass("display_block");
                $(".login-data").addClass("display_none");
            }
        }
    </script>
